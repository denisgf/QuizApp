@model GameOptionsViewModel 


@*@Html.DropDownList("myList3", Model.Difficulties)*@
<div class="title">
    Please, select the options to play
</div>
<div class="options">
    <form asp-action="PlayGame" asp-route-newGame="true">

        <div class="optionLabel">
            Number of Questions:
        </div>
        <div >
            <input id="numberControl1" class="selectControl" asp-for="Count" type="number" min="1" max="50" value="2">
        </div>
        <div class="optionLabel">
            Category:
        </div>
        <div>
            <select class="selectControl"  asp-for="SelectedCategory"
                    asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                <option value="-1">Any Category</option>
            </select>
        </div>
        <div class="optionLabel">
            Difficulty:
        </div>
        <div>
            <select class="selectControl" asp-for="SelectedDifficulty"
                    asp-items="@(new SelectList(Model.Difficulties, "DifficultyId", "DifficultyName"))">
                <option value="-1">Any Difficulty</option>
            </select>
        </div>
        <div class="optionLabel">
            Type:
        </div>
        <div>
            <select class="selectControl" asp-for="SelectedType"
                    asp-items="@(new SelectList(Model.Types, "TypeId", "TypeName"))">
                <option value="-1">Any Type</option>
            </select>
        </div>
        <div class="button">
            <input id="playGameButton" type="submit" value="Play Game" />
        </div>
    </form>
</div>
